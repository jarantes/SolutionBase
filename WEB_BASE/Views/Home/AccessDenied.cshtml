@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/bootstrap")
        <title>Acesso Negado</title>
    </head>
    <body style="padding: 20px">
        <div class="container">
            <div class="row alert alert-dismissable alert-warning">
                <div class="col-md-10">
                    <h1>Oopaá..! Onde pensa que vai??</h1>
                    <br />
                    <h3>Você não tem permisão para acessar a URL abaixo:</h3>
                    <p class="text-muted"><b>URL: </b>@ViewBag.UrlDenied</p>
                </div>
                <div class="col-md-2">
                    <img height="120" width="120" src="~/Content/Image/icone_alerta.png" alt="alert" />
                </div>
            </div>
            <a href="@Url.Action("Index", "Home")" class="btn btn-default">
                <span class="glyphicon glyphicon-list-alt"></span>&nbsp;Voltar para Inicio
            </a>
            
        </div>
    </body>
</html>