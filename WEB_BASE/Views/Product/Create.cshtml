@model Product
@{
    ViewBag.Title = "Criar Produto";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<h2>@ViewBag.Title</h2>

<div id="AjaxForm">
    @Html.Partial("_FormCreate", Model)
</div>

<div>
    <a href="@Url.Action("Index", "Product")" class="btn btn-default">
        <span class="glyphicon glyphicon-list-alt"></span>&nbsp;Voltar para Lista
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}