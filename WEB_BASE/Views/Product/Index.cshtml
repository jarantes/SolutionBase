@model IPagedList<ProductViewModels>

@{
    ViewBag.Title = "Lista de Produtos";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<h2>@ViewBag.Title</h2>

<hr />
<div class="small fadeIndSlow">

    <form action="@Url.Action("Index","Product")" method="get"
          data-otf-ajax="true" data-otf-target="#listProducts" id="formSearch">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("Pesquisar por Nome", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="search" name="SearchString" class="form-control input-sm" data-otf-autocomplete="@Url.Action("AutoComplete")" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <span class="glyphicon glyphicon-search"></span>&nbsp;Pesquisar
                    </button>

                    <a href="@Url.Action("Create", "Product")" class="btn btn-sm btn-primary">
                        <span class="glyphicon glyphicon-plus"></span>&nbsp;Criar Novo
                    </a>
                </div>
            </div>
        </div>
    </form>

